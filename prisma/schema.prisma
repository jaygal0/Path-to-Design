generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Designers {
  id              String   @id @default(cuid())
  firstName       String
  lastName        String
  email           String?
  twitter         String?
  instagram       String?
  dribble         String?
  url             String?
  oneLiner        String
  role            String
  company         Company  @relation(fields: [companyId], references: [id])
  companyId       String
  responsibilites String
  gotStarted      String
  advice          String
  regrets         String
  stayInspired    String
  apps            Apps[]
  books           Books[]
  published       Boolean? @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Company {
  id        String      @id @default(cuid())
  name      String
  desc      String
  url       String
  Designers Designers[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Books {
  id          String     @id @default(cuid())
  name        String
  author      String
  url         String
  Designers   Designers? @relation(fields: [designersId], references: [id])
  designersId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Apps {
  id          String     @id @default(cuid())
  appName     String
  url         String
  Designers   Designers? @relation(fields: [designersId], references: [id])
  designersId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
